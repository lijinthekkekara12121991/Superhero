<div class= "panel panel-default">
  <div class= "panel-heading">
    <h3><%= link_to 'Click here to create a Superhero', root_path %></h3>
  </div>
  <div class="panel-body">
    <div class="container">
      <div class="row">
        <div class="col-6 col-md-4">
          <img src="<%= @avatar %>">
        </div>
        <div class="col-md-8">
          <h3>
            Superhero name:<br/>
            <span class = "red"><%= @name %><br/></span>
          </h3>  
          <h3>
            Superhero power:<br/> 
            <span class = "red"><%= @power %><br/><br/></span>
          </h3>
          <h4>
            Your Undercover Day job is:<br/>
            <span class = "corp_red"><%= @corp_title %><br/></span>
          </h4>
          <h4>
            Your Corporate Superpower is:<br/> 
            <span class = "corp_red"><%= @corp_power.capitalize %><br/><br/></span>
          </h4>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to 'Create a whole superhero Team', home_team_path %>
  </div>
</div>
